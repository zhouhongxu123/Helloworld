<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        >

        <Button
            android:layout_columnWeight="1"
            android:text="MC" />

        <Button
            android:layout_columnWeight="1"
            android:text="M+" />

        <Button
            android:layout_columnWeight="1"
            android:text="M-" />

        <Button
            android:layout_columnWeight="1"
            android:text="MR" />

        <Button
            android:layout_columnWeight="1"
            android:text="C" />

        <Button
            android:layout_columnWeight="1"
            android:text="+/-" />

        <Button
            android:layout_columnWeight="1"
            android:text="รท" />

        <Button
            android:layout_columnWeight="1"
            android:text="X" />

        <Button
            android:layout_columnWeight="1"
            android:text="7" />

        <Button
            android:layout_columnWeight="1"
            android:text="8" />

        <Button
            android:layout_columnWeight="1"
            android:text="9" />

        <Button
            android:layout_columnWeight="1"
            android:text="-" />

        <Button
            android:layout_columnWeight="1"
            android:text="4" />

        <Button
            android:layout_columnWeight="1"
            android:text="5" />

        <Button
            android:layout_columnWeight="1"
            android:text="6" />

        <Button
            android:layout_columnWeight="1"
            android:text="+" />

        <Button
            android:layout_columnWeight="1"
            android:text="1" />

        <Button
            android:layout_columnWeight="1"
            android:text="2" />

        <Button
            android:layout_columnWeight="1"
            android:text="3" />

        <Button
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="=" />

        <Button
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:text="0" />

        <Button
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="5"
            android:text="." />
    </GridLayout>
</LinearLayout>
